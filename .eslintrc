{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "airbnb",
    "plugin:jest/recommended"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "jest"
  ],
  "rules": {
    "linebreak-style": "off",
    "jest/valid-expect": "off"
  },
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [
          ["@vendor","./vendor"],
          ["@utils","./src/utils"]
        ],
        "extensions": [
          ".js",
          ".jsx",
          ".json",
          ".ts", 
          ".tsx"
        ],
        "node": {
          "extensions": [".js", ".jsx", ".ts", ".tsx"]
        }
      }
    }
  }
}